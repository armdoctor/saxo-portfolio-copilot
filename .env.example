# Database (Docker Compose default)
DATABASE_URL="postgresql://saxo:saxo_dev_password@localhost:5433/saxo_copilot?schema=public"

# App Auth (NextAuth v5)
NEXTAUTH_SECRET="generate-with: openssl rand -base64 32"
# AUTH_URL is auto-detected on Vercel. Set explicitly only for non-Vercel deployments:
# AUTH_URL="https://your-domain.com"

# Google OAuth — https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID="your-google-client-id"
AUTH_GOOGLE_SECRET="your-google-client-secret"

# Token Encryption (AES-256-GCM, 32 bytes base64)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
TOKEN_ENCRYPTION_KEY=""

# Saxo Bank OpenAPI
SAXO_APP_KEY="your-saxo-app-key"
SAXO_APP_SECRET=""
SAXO_REDIRECT_URI="http://localhost:3000/api/saxo/callback"
# Set to "live" for production, "sim" for development/testing
SAXO_ENV="sim"
# SIM auth: https://sim.logonvalidation.net
# SIM API:  https://gateway.saxobank.com/sim/openapi
# LIVE auth: https://live.logonvalidation.net
# LIVE API:  https://gateway.saxobank.com/openapi

# OpenAI (optional — chat feature disabled without it)
OPENAI_API_KEY="sk-..."

# Finnhub (optional — news feed disabled without it)
FINNHUB_API_KEY="your-finnhub-api-key"
